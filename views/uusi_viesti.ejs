            <input type="text" value="<%= msgTopic %>" <%- (msgTopic!='')?'readonly="readonly"':''%> placeholder="<%= msgTopic %>" name="topic" required='true'><br>
            <label class="serif" for="message">Viesti</label><br>
            <textarea name="message" placeholder="Viesti" rows="3" cols="50" ><%= msg %> %></textarea><br>

            <button type="submit" class="serif btn btn-dark m-2" onclick="window.location='http:/';return false;" Value="Peru">Peru</button>
            <button type="submit" class="serif btn btn-dark m-2" id="submit" value="L채het채">L채het채</button>    
        </form>
    </main>
        <% include footer %>
  </body>
</html>
