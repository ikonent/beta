<!DOCTYPE html>
<html lang="fi">
  <head>
    <% include head %>
  </head>
  <body class="container-fluid">
        <% include header %>
        <% include hallinta %>
    
    <main class="flex justify-content-center flex-column">
        <div class="serif row"><a href="/">aiheet</a> > Aloita uusi keskustelu
        </div>
        <% console.log(msgTopic) %>
        <form method='POST' action='/uusi_viesti'>
            <input type="hidden" name="sender" value="<%= login %>">
            <input type="hidden" name="muokkaa" value="<%= msgId %>">
            <input type="hidden" name="topikki" value="<%= topikki %>">
