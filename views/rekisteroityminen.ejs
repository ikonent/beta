<!DOCTYPE html>
<html lang="<%- dict.getCurrentLocale().language %>">
  <head>
    <% include head %>
  </head>
  <body class="container-fluid">
        <% include header %>
        <% include hallinta %>
    
    <main class="flex justify-content-center flex-column">	
        <script>
            function varmista(){
                if(confirm("Ole siivosti!")) {
                    if (!document.getElementById("ohjeetluettu").checked) {
                        document.getElementById("ohjeetluettu").checked=true;
                    }
                }
            }
			function checkPassword(form) {
                password1 = form.passwd.value;
                password2 = form.pwd2.value;
  
                // Jos salasana ei syötetty
                if (password1 == '')
                    alert (<%=dict.translate("uusi_kayttaja.vikaPassu")%>);
                      
                // Jos sama salasana ei syötetty
                else if (password2 == '')
                    alert (<%=dict.translate("uusi_kayttaja.vikaPassu2")%>);
                      
                // Jos salasanat ei täsmää...   
                else if (password1 != password2) {
                    alert (<%=dict.translate("uusi_kayttaja.vikaEiTasmaa")%>)
                    return false;
                }
 
                // Jos sama palauta True
                else{
                    return true;
                }
            }
        </script>
        <nav class="serif row"><a href="/<%=addToUrl%>"><%=dict.translate("common.aiheet")%></a>&nbsp;> <%=dict.translate("uusi_kayttaja.title")%>
        </nav>
        <h2  class="serif"><%=dict.translate("uusi_kayttaja.otsikko")%></h2>
        <form method='POST' onSubmit="return checkPassword(this)" href='/<%=dict.translate("urls.kayttajat") + "/" + dict.translate("urls.rekisteroityminen")+addToUrl%>'>
            <div>
                <label for="userid" class="serif"><%=dict.translate("uusi_kayttaja.kTunnus")%></label><br>
                <input type="text" placeholder="<%=dict.translate("uusi_kayttaja.tunnus")%>" name="userid" required="true" value=""><br>
                <label for="passwd"  class="serif"><%=dict.translate("uusi_kayttaja.salasana")%></label><br>
                <input id="password" type="password" placeholder="<%=dict.translate("uusi_kayttaja.salasanaPlaceholder")%>" name="passwd" required='true' value=""><br>
                <label for="pwd2" class="serif"><%=dict.translate("uusi_kayttaja.salasana2")%></label><br>
                <input id="pwd2" required="true" type="password" name="pwd2" placeholder="<%=dict.translate("uusi_kayttaja.salasana2Placeholder")%>" value=""><span id='message'></span><br>
                <input id="ohjeetluettu" name="ohjeetluettu" required="true" type="checkbox">
                <label for="ohjeetluettu" on  class="serif"><%=dict.translate("uusi_kayttaja.olenLukenut")%> <a onclick="varmista()" href=""  class="serif" ><%=dict.translate("uusi_kayttaja.fooruminOhjeet")%></a></label><br>
            </div>
            <button id="submit" type="submit" class="serif btn btn-dark" name="LuoTunnus" value="Luo tili"><%=dict.translate("uusi_kayttaja.luoTunnusPainike")%></button>
            <button type="button" class="serif btn btn-dark m-2" onclick="location='/<%=addToUrl%>';return false;" Value="Peru" formnovalidate><%=dict.translate("uusi_kayttaja.peruPainike")%></button>
        </form>
    </main>
        <% include footer %>
  </body>
</html>
