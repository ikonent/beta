
<!-- login.ejs -->
<!DOCTYPE html>
<html lang="fi">
<head>
	<% include head %>
</head>

<body>
	<header><% include menu %></header>
	<main class="conteiner-fluid login">
		<section class="ms-5 mt-5">
			<h2 class="h2 m-2"><%= title %></h2>
		</section>
		
		<section class="col-sm-6 mt-3 mb-3 ms-5">
			<form method='POST' action='/users/login' class=" mt-3 mb-3 pt-3 ms-3">
				<div class="row p-2">
					<label for="userid" class="col-sm-4">Käyttäjätunnus:</label>
					<div class="col-sm-3">
						<input type="text" placeholder="Tunnus" name="userid" required="true" value="">
					</div>
				</div>
				<div class="row p-2">
					<label for="passwd" class="col-sm-4">Salasana:</label>
					<div class="col-sm-3">
						<input type="password" placeholder="Salasana" name="passwd" required='true' value="">
					</div>
				</div>
				<div class="row p-2">
					<label class="col-sm-4"></label>
					<div class="col-sm-8">
						<input type="submit" class="btn btn-primary shadow-none" name="kirjaudu" value="Kirjaudu">

						<input type="submit" class="btn btn-secondary m-2 shadow-none" onclick="window.location='http:/';return false;" Value="Peru">
					</div>
				</div>
			</form>
		</section>
	</main>
	<footer>
			<% include footer %>
	</footer>
</body>
</html>








